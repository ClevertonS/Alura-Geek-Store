generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id       Int       @id @default(autoincrement())
  category String
  Products Product[]

  @@map("Categories")
}

model Product {
  id           String    @id @default(uuid())
  title        String
  category     Category? @relation(fields: [categoryId], references: [id])
  categoryId   Int?
  productImage String
  description  String
  price        Decimal

  @@map("Products")
}

enum Role {
  CATEGORY
  ADMIN
}
